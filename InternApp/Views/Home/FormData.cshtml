
@{
}
@{
    ViewData["Title"] = "FormData";
}
@model InternApp.Models.Address
<address>       
<form method="get" class="mx-1 mx-md-4" enctype="multipart/form-data" asp-controller="Home" asp-action="UpdateUser">

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="id">Id</label>
                <input type="hidden" id="id" asp-for="Id" class="form-control" />
            </div>

            </div>
            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fas fa-user fa-lg me-3 fa-fw"></i>    
        <div class="form-outline flex-fill mb-0">
                <input type="text" id="name" asp-for="Name"  class="form-control" />
            <label class="form-label" for="name">Your Name</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input type="email" id="email" asp-for="email" class="form-control" />
            <label class="form-label" for="email"> Email</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
                <input type="text" id="Password" asp-for="Password" class="form-control" />
            <label class="form-label" for="Password">Password</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
                <input type="text" id="Cpassword" asp-for="Cpassword" class="form-control" />
            <label class="form-label" for="Cpassword">Repeat your password</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <input type="submit" value="submit" />
    </div>
</form>
</address>
